@model IEnumerable<Dvd_MvcCodeFirst.Models.Aluno>

@{
    ViewBag.Title = "Index";
}

<h2>Alunos Cadastrados</h2>

<p>
    @Html.ActionLink("Novo aluno", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Professor
        </th>
        <th>
            Aluno
        </th>
        <th>
            Email
        </th>
        <th>
            Ano
        </th>
        <th>
            Aprovado
        </th>
        <th>
            Inscrição
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Professor.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeAluno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ano)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aprovado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inscrição)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IDAluno }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IDAluno }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.IDAluno })
        </td>
    </tr>
}

</table>
